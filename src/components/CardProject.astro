---
import ArrowFrom from './icons/ArrowFrom.astro'
import GitHub from './icons/GitHub.astro'

export interface Props {
  position: 'left' | 'right';
  cover: string;
  description: string;
  linkDemo: string;
  linkRepo: string;
  name: string;
  toolsList: string[];
}

const { position = 'left', name, description, cover, linkDemo, linkRepo, toolsList } = Astro.props

---

<article class={`card-project ${position === 'left' ? 'light' : 'dark'}`}>

	<div class={`card-container ${position}`}>
		<div class='card-images'>
			<div class='image-bg image-third'></div>
			<div class='image-bg image-second'></div>
			<img class='image image-first' src={cover} alt=''>
		</div>

		<div class='card-contend'>

			<h4 class='card-title'>{name}</h4>
			<div class={`card-description ${position}`}>
				<p>{description}</p>
			</div>
			<div class='card-skills'>
				<ul class='skills-list'>
					{
						toolsList.map(tool => (
							<li>{tool}</li>
						))
					}
				</ul>
			</div>
			<div class='card-links'>
				<a href={linkRepo}>
					<GitHub className='card-icon github'/>
				</a>
				<a href={linkDemo}>
					<ArrowFrom className='card-icon arrowfrom'/>
				</a>
			</div>
		</div>
	</div>
</article>

<style>
  .dark {
    background-color: #eeeeee;
  }

  .light {
    background-color: #fefefe;
  }

  .card-project {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 40px 25px;
  }

  .card-container {
    display: flex;
    flex-direction: column;
  }

  .card-images {
    width: 340px;
    height: 170px;
    position: relative;
    display: flex;
    justify-content: end;
    align-items: end;
    margin-bottom: 25px;
  }

  .image {
    width: 300px;
    height: 150px;
    object-fit: cover;
    position: absolute;
  }

  .image-bg {
    width: 300px;
    height: 150px;
    position: absolute;
    background-size: 300px;
    background-repeat: no-repeat;
  }

  .image-second {
    top: -5px;
    left: 20px;
    background-image: url(./assets/projectCover/imagen3.png);
  }

  .image-third {
    left: 5px;
    background-image: url(./assets/projectCover/imagen2.png);
    background-position: -130px 0px;
  }

  .card-contend {
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 22px;
    margin-bottom: 10px;
  }

  .card-description {
    margin-bottom: 15px;
    text-wrap: balance;
    max-width: 450px;
  }

  .card-skills {
    margin-bottom: 20px;
  }

  .skills-list {
    display: flex;
    gap: 10px;
  }

  .skills-list li {
    list-style: none;
  }

  .card-links {
    display: flex;
    justify-content: start;
    gap: 15px;
    margin-bottom: 10px;
  }

  .card-links a {
    align-items: center;
    appearance: none;
    background-color: #fff;
    border-radius: 4px;
    border-style: none;
    box-shadow: rgba(0, 0, 0, .2) 0 3px 5px -1px,rgba(0, 0, 0, .14) 0 6px 10px 0,rgba(0, 0, 0, .12) 0 1px 18px 0;
    cursor: pointer;
    display: flex;
    font-family: var(--font--general);
    height: 45px;
    justify-content: center;
    overflow: visible;
    padding: 15px 15px;
    position: relative;
    text-align: center;
    text-transform: none;
    transition: box-shadow 350ms cubic-bezier(.4, 0, .2, 1),opacity 15ms linear 30ms,transform 270ms cubic-bezier(0, 0, .2, 1) 0ms;
    touch-action: manipulation;
    will-change: transform,opacity;
    z-index: 0;
  }

  .card-links a:hover {
      box-shadow: rgba(0, 0, 0, .1) 0 4px 12px;
  }

  .card-links a:active {
    box-shadow: 0 4px 4px 0 rgb(60 64 67 / 30%), 0 8px 12px 6px rgb(60 64 67 / 15%);
    border: none;
    outline: none;
  }

  .card-links a:focus {
    outline: none;
    border: 2px solid #d3d3d3;
  }

  .card-icon {
    color: #676767;
  }

  .github {
    height: 26px;
  }

  .arrowfrom {
    height: 21px;
  }

  @media (width >= 998px) {
    .left {
      flex-direction: row-reverse;
    }

    .right {
      flex-direction: row;
    }

    .card-contend .left {
      padding-right: 20px;
    }

    .card-container {
      max-width: 900px;
      gap: 50px;
    }

    .image {
      width: 600px;
      height: 170px;
    }

    .image-bg {
      background-size: 350px;
    }

    .image-second {
      top: -25px;
      left: -20px;
    }

    .image-third {
      top: -5px;
      left: -50px;
    }

    .card-links {
      justify-content: start;
    }
  }
</style>