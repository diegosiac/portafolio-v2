<style>
    .aboutMe {
    background: rgb(207,207,207);
    background: linear-gradient(276deg, rgba(207,207,207,1) 0%, rgba(207,207,207,1) 19%, rgba(217,217,217,1) 45%, rgba(227,227,227,1) 73%, rgba(255,255,255,1) 92%);

    height: 400px;
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 35px;
}

.moreMe__Text {
    width: 700px;
    text-wrap: balance;
}

.moreMe__name  {
    font-size: 30px;
    font-weight: bold;
    font-family: var(--font--suaz);
    margin-bottom: 20px
}

.moreMe__name .firstName {
    margin-right: 7px;
    color: var(--white--light);
}

.moreMe__name .lastName {
    color: var(--text--color-orange);
}

.moreMe__Text p{
    margin-bottom: 15px;
}

.moreMe__skills {
    margin-top: 30px;
}

.moreMe__skills p{
    max-width: 400px;
}

.moreMe__Img {
    align-self: center;
    display: flex;
    flex-grow: 1;
    justify-content: center;
    margin-top: 35px;
    overflow: hidden;
}
.moreMe__Img img{
    width: 210px;
    z-index: 60;
}

.moreMe__Img::after {
    background-color: var(--palete);
    content: "";
    height: 200px;
    margin: 0 40px 0 0;
    position: absolute;
    width: 140px;
    z-index: 10;
}

.moreMe__Skills {
    display: grid;
    grid-template-columns: repeat(2, minmax(140px, 200px));
    gap: 2px 10px;
}

.moreMe__Skills li {
    list-style: none;
    padding-left: 22px;
    position: relative;
}

.moreMe__Skills li::before {
    color: var(--palete--light);
    content: "⭑";
    font-size: var(--text--size-xxl);
    left: 0px;
    line-height: 17px;
    position: absolute;
}


</style>
